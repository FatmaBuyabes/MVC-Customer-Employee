@model WebApplication5.Models.Employee

<style>
    .customer-details {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 20px;
        margin: 20px 0;
        background-color: lightsteelblue;
    }

        .customer-details h4 {
            color: #333;
        }

        .customer-details dl {
            margin: 0;
            padding: 0;
        }

        .customer-details dt {
            font-weight: bold;
            margin-top: 10px;
        }

        .customer-details dd {
            margin-left: 0;
            margin-bottom: 10px;
        }
</style>

<div class="customer-details">
    <h2>Employee Details</h2>

    <div>
        <h4>Employee</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Employee ID</dt>
            <dd>@Model.employeeId</dd>

            <dt>Employee Name</dt>
            <dd>@Model.firstName @Model.lastName</dd>

            <dt>Employee Email</dt>
            <dd>@Model.email</dd>

            <dt>Employee Department</dt>
            <dd>@Model.department</dd>
        </dl>
    </div>
</div>
